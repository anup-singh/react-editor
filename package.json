{
  "name": "@tech-library/react-editor",
  "description": "A React Based Rich text Editor",
  "version": "0.1.3",
  "author": "Anup Singh",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "_type": "module",
  "scripts": {
    "test": "jest",
    "build": "npm-run-all clean build:webpack",
    "build:webpack": "webpack",
    "clean": "rimraf dist",
    "start": "webpack serve --config webpack.dev.server --open",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "build:babel": "npm-run-all clean build:cjs build:esm",
    "build:esm": "cross-env BABEL_ENV=esm babel src --out-dir dist/esm",
    "build:cjs": "babel src --out-dir dist/cjs",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepublishOnly": "npm-run-all lint test version:patch build",
    "prepack": "npm-run-all lint test version:patch build",
    "lint": "eslint ./src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anup-singh/react-editor.git"
  },
  "bugs": {
    "url": "https://github.com/anup-singh/react-editor/issues"
  },
  "homepage": "https://github.com/anup-singh/react-editor#readme",
  "keywords": [
    "react",
    "editor",
    "rich-text",
    "content-editor",
    "wysiwyg",
    "text-editor",
    "markdown",
    "javascript"
  ],
  "license": "MIT",
  "dependencies": {
    "marked": "^16.3.0",
    "prop-types": "^15.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "turndown": "^7.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/eslint-parser": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.35.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^5.0.0",
    "babel-jest": "^30.1.2",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "file-loader": "^6.2.0",
    "globals": "^16.3.0",
    "html-webpack-plugin": "^5.6.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "mini-css-extract-plugin": "^2.9.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-node-externals": "^3.0.0"
  },
  "peerDependencies": {
    "marked": "^16.3.0",
    "prop-types": "^15.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "turndown": "^7.2.1"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "README-Dev.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  }
}
